---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- SEO inicia -->
    <meta
      name="description"
      content="Calcula tus promedios académicos con ponderaciones de manera sencilla y rápida. Ideal para estudiantes que desean llevar un registro preciso de su rendimiento académico."
    />
    <meta
      name="keywords"
      content="calcular promedios, herramienta para estudiantes, promedios con ponderaciones, rendimiento académico"
    />
    <meta
      property="og:description"
      content="Utiliza nuestra herramienta para estudiantes y calcula tus promedios con ponderaciones, optimizando tu tiempo de estudio y rendimiento académico."
    />
    <!-- SEO termina -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
    }

    section {
      font-family: Arial, sans-serif;
      padding: 15px;
    }

    input,
    select,
    button {
      margin: 5px 0;
      transition: 0.5s ease all;
    }
  </style>
</html>
