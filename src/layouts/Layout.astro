---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z46VHH4WTV"></script>
  <script>
    // @ts-ignore
    window.dataLayer = window.dataLayer || [];
     // @ts-ignore
    function gtag(){dataLayer.push(arguments);}
     // @ts-ignore
    gtag('js', new Date());
     // @ts-ignore
    gtag('config', 'G-Z46VHH4WTV');
  </script>
  
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- SEO inicia -->
    <meta
      name="description"
      content="Herramienta gratuita para profesores para calcular escalas de notas y evaluar el rendimiento estudiantil de manera efectiva y precisa."
    />
    <meta
      name="keywords"
      content="calculo de notas, escalas de notas, herramientas para profesores, evaluación estudiantil"
    />
    <meta
      property="og:description"
      content="Descubre cómo nuestra herramienta ayuda a profesores a calcular escalas de notas y mejorar la evaluación en el aula."
    />
    <!-- SEO termina -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

  </head>
  <body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
    <slot name="header"></slot>  <!-- Aquí se insertará el Navbar -->
  <main style="flex: 1;">
    <slot />  <!-- Aquí se insertará el contenido principal de cada página -->
  </main>
  <slot name="footer"></slot>  <!-- Aquí se insertará el Footer -->
  </body>
  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
    }

    section {
      font-family: Arial, sans-serif;
      padding: 15px;
    }

    input,
    select,
    button {
      margin: 5px 0;
      transition: 0.5s ease all;
    }
  </style>
</html>
